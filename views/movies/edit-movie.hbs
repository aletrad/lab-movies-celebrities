<h2>Update the movie</h2>

<form action="/movies/{{movies._id}}/edit" method="post">
<label for="title">Title</label>
<input type="text" name="title" id="title" value="{{movies.title}}"/>

<label for="genre">Genre</label>
<input type="text" name="genre" id="genre" value="{{movies.genre}}"/>

<label for="plot">Plot</label>
<input type="text" name="plot" id="plot" value="{{movies.plot}}"/>

<label for="cast">Cast</label>

<select name="cast" id="cast" multiple/>
{{#each celebrities}}
<option value="{{_id}}">{{name}}</option>
{{/each}}
</select>

<button type"submit">Update</button>

</form>

<p><a href="/">Back</a></p>